{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  
    "types": ["node", "bcryptjs"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
